<% if user_signed_in?%>

    <div class="container">
        <%  @posts.each do |post|%>
            <div class="post-wrapper">
                <div class= "post-header">
                    <h1><%= post.title%></h1>
                    <h5><%= post.created_at%></h5>
                    <p><%= post.user.email%></p>
                </div>
                <div class="post-body">
                    <p>
                        <%= post.body%>
                    </p>
                </div>
                <% if post.user.id == current_user.id%>
                    <div class="post-btn">
                        <div class="post-btn-top-right">
                            <%= link_to "Edit", edit_post_path(post)%>
                            <%= link_to "Delete Post", post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
                        </div>
                    </div>
                <%end%>
                  <div class="post-btn">
                    <h5>React</h5>
                        <div class="react">
                          <%#if @likes.present? && current_user.posts ==  post%>
                            <% if post.likes.count <= 0 %>
                              <%#if post.user.id == current_user.id%>
                                  <div class="reacts">
                                    <% if post.likes.count <= 0%>
                                      <%= link_to "ðŸ‘", likes_path(:post_id => post, :user_id => current_user), data: { turbo_method: :post}%>
                                      <%else%>
                                       <%= link_to "ðŸ‘Ž", like_path(current_user),
                                      data: { turbo_method: :delete,
                                              }%>
                                    <% end%>
                                  </div>
                                <%else%>
                                  <div class="reacts">
                                    <% if post.likes.count >= 1%>
                                      <%= link_to "ðŸ‘Ž", like_path(current_user) ,
                                      data: { turbo_method: :delete,
                                              }%>
                                      <%else%>
                                      <%= link_to "ðŸ‘", likes_path(:post_id => post, :user_id => current_user), data: { turbo_method: :post}%>
                                    <% end%>
                                  </div>
                              <%#end%>
                            <%end%>
                          <%#end%>
                        </div>
                        <div class="likes">
                            <%= post.likes.count%>
                        </div>
                  </div>

                <div class="comment-wrapper">
                    <strong>Comments: </strong>
                      <%= render post.comments %>
                        <div class="comment-form">
                          <p>Add Comment here:</p>
                            <%= form_with model:[ post, post.comments.build ] do |f| %>
                                <p>
                                    <%= f.text_area :body %>
                                    <%= f.hidden_field :name, value: current_user.name%>
                                </p>
                                <p>
                                    <%= f.submit class: "comment-submit" %>
                                </p>
                            <% end%>
                        </div>
                </div>
            </div>
        <% end%>
    </div>

<% else%>

  <h1>Welcome to the homepage!</h1><br>


<% end%>
